mixin a-burger(notification = false)
  if(notification == false)
    a.a-burger(href="#menu"): +i-burger 
  else
    a.a-burger.a-burger_notification(href="#menu"): +i-burger 

mixin a-logo()
  div(style="width: 100%; height: 100%; background: black")

mixin a-disclosure()
  span.a-disclosure: +i-disclosure-indicator
