.o-catalogs
  display flex
  flex-direction column

  @media (min-width $tablet)
    font-size 0
    display block

    @supports(flex-wrap wrap)
      flex-wrap

  &_limit_4-4-9 &__item
    &:nth-child(n)
      display none
      opacity 0
      transition all 1s

    &:nth-child(1),
    &:nth-child(2),
    &:nth-child(3),
    &:nth-child(4)
      display inline-block
      opacity 1

    @media(min-width $large-desktop)
      &:nth-child(1),
      &:nth-child(2),
      &:nth-child(3),
      &:nth-child(4),
      &:nth-child(5),
      &:nth-child(6),
      &:nth-child(7),
      &:nth-child(8),
      &:nth-child(9)
        display inline-block
        opacity 1


  &_more &__item:nth-child(n)
    display inline-block
    opacity 1

  &__item
    box-sizing border-box
    // width 100%
    margin-bottom 10px


    @media (min-width $tablet)
      display inline-block
      width 50%
      padding 0 10px
      margin-bottom 20px

    @media (min-width $large-desktop)
      width 33.333%


  &__more
    padding 30px 10px 0
    text-align center

    @media (min-width $tablet)
      padding 60px 10px 0

.o-catalog-filter
  display block
  padding 0
  margin 0
  list-style-type none

  &_open &__choose
    display none



    &:last-child
      border-bottom none

    &_open
      display block !important

.o-menu-phone
  display flex
  flex-direction column
  height 100%
  width 100%
  background-color $white-two
  overflow auto

  &:before
    content ""
    display block
    height 65px

  &__header
    position fixed
    left 0
    top 0
    z-index 15
    display flex
    justify-content center
    align-items center
    width 100%
    height 65px
    background white
    border-bottom 1px solid $gray

  &__title
    font-size 18px

  &__close
    display block
    position absolute
    right 16px

  &__list
    list-style-type none
    padding 0 0 0 15px
    margin 0
    background white

  &__item
    border-bottom 1px solid $gray
    padding 12px 0
    border-bottom 1px solid $gray
    font-size 17px
    letter-spacing -0.4px

    &:last-child,
    &_open
      border-bottom none

  &__apply
    margin auto 16px 16px
    padding 15px

    &_hidden
      display none

  &__list_opened &__item:not(&__item_open)
    display none

.o-nav-filter
  display none
  padding 0
  margin 0
  list-style-type none
  column-count 5

  @media (min-width $desktop)
    display block

  &__column
    page-break-inside avoid
    break-inside avoid

.o-nav-column
  letter-spacing 0.5px
  line-height 17px

  &__title
    margin-bottom 7px

  &__list
    padding 0
    margin 0
    list-style-type none
    color #888

  &__item
    margin-bottom 5px

  &__link
    color inherit
    text-decoration none

    &:hover
      text-decoration underline

.o-bar
  display flex
  align-items center
  list-style-type none
  font-size 14px

  &__item
    margin-right 30px

    &:last-child
      margin-right 0
