.m-button-menu
  box-sizing border-box
  height 40px
  padding 10px
  border-top 1px solid $gray
  border-bottom 1px solid $gray
  text-align center
  color $dark-indigo

  &__title
    display inline-block
    font-family "Museo Sans Cyrl"
    font-size 16px
    font-weight 500

  &__disclosure
    display inline-block

.m-tabs
  display inline-flex
  justify-content center
  align-items center
  overflow hidden
  padding 0
  margin 0
  border-radius 5px
  border 1px solid $light-gray
  list-style-type none
  background-color $light-gray


  &__item
    min-width 76px
    text-align center
    font-size 13px

    @media (min-width $mobile-md)
      min-width 86px

    @media (min-width $tablet)
      min-width 138px
      font-size 16px

  &__link
    display block
    padding 11px 2px 10px
    color inherit
    text-decoration none

    &_active,
    &:hover
      background white
      font-weight 700

.m-catalog-item
  position relative
  height 200px
  text-align center
  color $black
  overflow hidden
  background $white-two

  @media (min-width $tablet)
    height 275px

  &__title
    padding 22px 55px 2px
    font-size 18px
    font-weight bold
    opacity 0.9
    letter-spacing -0.4px
    line-height 22px

  &__price
    margin-bottom 15px
    opacity 0.8
    font-size 14px

    @media (min-width $tablet)
      font-size 18px

  &__pr
    width 280px
    height 150px
    background red

    @media (min-width $tablet)
      width 330px
      height 250px

  &:hover
    // min-height 240px
  &:hover &__inner
    filter blur(10px)
    transition all .3s linear

  &:hover &-o
    opacity 1
    transition all .3s linear

.m-catalog-item-o
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  display flex
  justify-content space-between
  align-items center
  flex-direction column
  opacity 0
  background rgba(0, 0, 0, 0.6)
  color white

  &__header
    width 100%
    padding 5px 10px 10px
    border-bottom 1px solid rgba(255, 255, 255, 0.2)

    @media (min-width $tablet)
      padding 16px 10px 18px

  &__title
    max-width 270px
    margin 0 auto
    font-size 20px
    font-weight bold
    line-height 25px
    opacity 0.9
    letter-spacing -0.4px

    @media (min-width $tablet)
      font-size 24px
      line-height 29px

  &__price
    font-size 16px
    line-height 19px

  &__body
    display flex
    justify-content space-between
    align-items center
    flex-direction column
    max-width 270px
    padding 0 0 25px

  &__desc
    padding 5px 10px 5px
    font-size 16px
    line-height 1.2

    @media (min-width $tablet)
      padding 12px 10px 15px
      font-size 18px
      line-height 1.5

.m-nav-foo
  display block
  padding 0 3px
  margin 0
  list-style-type none
  text-align center
  font-size 0
  line-height 22px
  color $dark-indigo

  @media (min-width $tablet)
    display block
    padding 0
    column-count 3
    column-gap 0
    column-fill balance-all

  &__item
    display inline
    margin 0 10px
    white-space nowrap

    @media (min-width $tablet)
      display block
      margin 0
      white-space normal
      text-align left

  &__link
    color inherit
    opacity 0.5
    font-size 13px
    letter-spacing -0.5px

    &:hover
      opacity 1

.m-social
  display flex
  justify-content center
  align-items center
  padding 0
  margin 0
  list-style-type none

  &__item
    margin 0 8px

    @media (min-width $tablet)
      margin 0 12px

    &:hover
      opacity 0.5

.fade
  opacity 0
  transition opacity 1s

  &.in
    opacity 1

.m-tab-contents
  display none

  &_active
    display block

.m-choose

  &__header
    display flex
    justify-content space-between
    align-items center
    padding-right 40px
    position relative
    cursor pointer

  &__current
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    max-width 60%
    color #888

  &__disclosure-indicator
    position absolute
    right 15px
    top 50%
    margin-top -10px

  &__list
    display none
    padding 0

    &_open
      display block

  &__item
    padding 12px 0 12px 8px
    margin 12px 0 -12px
    list-style-type none
    font-weight 300
    border-top 1px solid $gray


    &_active,
    &:hover
      background-color $dark-indigo
      color white
      cursor pointer

  &__icon
    margin-right 8px

.m-delivery
  font-size 26px
  line-height 1
  color $dark-indigo
  text-align center
  font-family PlayfairDisplay

  &__city
    color $clear-blue

.m-nav
  display flex
  list-style-type none
  margin 0
  padding 0
  font-size 14px
  color black

  &__item
    margin-right 30px

    &:last-child
      margin-right 0

  &__link
    color inherit

    &:hover
      text-decoration none

.m-dropdown
  box-sizing border-box
  position relative
  border 1px solid #888
  border-radius 5px
  padding 5px

  &:hover
    cursor pointer

  &__current
    display flex

  &__value
    margin-right 5px

  &__corner
    opacity 0.3

  &:hover &__corner
    opacity 1

  &__list
    box-sizing border-box
    position absolute
    top 25px
    left 0
    z-index 5
    display none
    padding 0
    margin 0
    list-style-type none
    border 1px solid #888
    border-radius 5px 5px 5px 5px
    background white
    overflow hidden

  &:hover &__list
    display block

  &__item
    display flex
    padding 5px
    color $greyish-brown

    &:hover
      background-color $dark-indigo
      color white

  &__icon
    width 20px
    height 12px
    margin-right 5px

.m-phone-nav
  display block
  padding 0
  margin 0
  list-style-type none
  text-align center
  background #fff

  &__item
    display block
    padding 17px 0
    font-size 32px
    font-weight 700
    color $dark-indigo

  &__link
    color inherit
    text-decoration none

.m-phone-bar
  display block
  padding 60px 10px
  margin 0
  list-style-type none
  text-align center
  font-size 24px
  font-weight 700

  &__item
    margin-bottom 24px
    color $dark-indigo
    opacity 0.8
